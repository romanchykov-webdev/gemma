generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  extensions        = [uuid_ossp(map: "uuid-ossp", schema: "extensions")]
}

// Словарные таблицы
model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Size {
  id        Int      @id @default(autoincrement())
  name      String   @unique // например: "Piccola", "Media", "Grande"
  value     Int      @unique // числовое значение, например: 25, 30, 35 (см)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Type {
  id        Int      @id @default(autoincrement())
  name      String   @unique // например: "Sottile", "Tradizionale"
  value     Int      @unique
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ingredient {
  id          Int       @id @default(autoincrement())
  name        String
  price       Decimal   @default(0) @db.Decimal(10, 2)
  imageUrl    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Используется в корзине
  cartItems   CartItem[] @relation("CartItemToIngredient")
}

// Основная модель продукта — плоская структура
model Product {
  id       Int      @id @default(autoincrement())
  name     String
  imageUrl String

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  // Базовые ингредиенты продукта
  // Пример: [{ "id": 8, "removable": false }, { "id": 9, "removable": true }]
  baseIngredients Json

  // Ингредиенты, которые можно добавить (массив ID)
  addableIngredientIds Int[]

  // Варианты продукта (размер + тип теста + цена)
  // Пример: [{ "variantId": 1, "price": 5.00, "sizeId": 1, "typeId": 1 }]
  variants Json[]

  // Отношение к элементам корзины
  cartItems CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}

// Остальные модели (корзина, заказы и т.д.)
model Cart {
  id          String     @id @default(uuid()) @db.Uuid
  userId      String?    @unique @db.Uuid
  tokenId     String?
  totalAmount Decimal    @default(0) @db.Decimal(10, 2)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       CartItem[]

  @@index([tokenId])
}

model CartItem {
  id            String       @id @default(uuid()) @db.Uuid
  cartId        String       @db.Uuid
  productId     Int          // ссылка на Product
  variantId     Int          // ID варианта из массива variants продукта
  quantity      Int          @default(1)

  // Какие ингредиенты убраны из базовых (ID)
  baseIngredientsSnapshot Json? @default("[]")
  removedBaseIngredientIds Int[] @default([])

  // Какие ингредиенты добавлены сверх базовых (ID)
  addedIngredientIds       Int[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?    @db.Uuid

  cart      Cart       @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product    @relation(fields: [productId], references: [id])
  User      User?      @relation(fields: [userId], references: [id])
  ingredients Ingredient[] @relation("CartItemToIngredient")

  @@index([cartId])
  @@index([productId])
  @@unique([cartId, productId, variantId, removedBaseIngredientIds, addedIngredientIds]) // чтобы избежать дубликатов одинаковых конфигураций
}

model Order {
  id              String      @id @default(uuid()) @db.Uuid
  userId          String?     @db.Uuid
  tokenId         String
  items           Json        // можно хранить полную конфигурацию товаров
  status          OrderStatus @default(PENDING)
  type            OrderType   @default(DELIVERY)
  totalAmount     Decimal     @default(0) @db.Decimal(10, 2)
  paymentId       String?
  fullName        String
  address         String
  email           String
  phone           String
  comment         String?
  expectedReadyAt DateTime?   // расчетное время готовности
  readyAt         DateTime?   // фактическое время завершения заказа
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  user            User?       @relation(fields: [userId], references: [id])

  @@index([userId])
}

// Остальные модели без изменений
model User {
  id               String            @id @default(uuid()) @db.Uuid
  fullName         String
  email            String            @unique
  password         String
  phone            String?
  address          String?
  role             UserRole          @default(USER)
  provider         String?
  providerId       String?
  verified         DateTime?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  cart             Cart?
  cartItems        CartItem[]
  orders           Order[]
  verificationCode VerificationCode?
}

model VerificationCode {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @unique @db.Uuid
  code      String
  expiresAt DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, code])
}

model Story {
  id              Int         @id @default(autoincrement())
  previewImageUrl String
  createdAt       DateTime    @default(now())
  items           StoryItem[]
}

model StoryItem {
  id        Int      @id @default(autoincrement())
  storyId   Int
  sourceUrl String
  createdAt DateTime @default(now())
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@index([storyId])
}

enum OrderStatus {
  PENDING
  PROCESSING
  READY
  SUCCEEDED
  CANCELLED
}

enum OrderType {
  DELIVERY
  PICKUP
}

enum UserRole {
  USER
  ADMIN
  CONTENT_MAKER
  OWNER
}